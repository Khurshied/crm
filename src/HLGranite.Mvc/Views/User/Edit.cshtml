@model HLGranite.Mvc.Models.User

@{
    ViewBag.Title = "Edit";
}

<script>
    $(function () {
        $("#edit").click(function () {
            //$(this).addClass("pressed");
            $(this).css("background", "#ccc");
            enableAll();
        });
    });
</script>

<h2>Edit</h2>

